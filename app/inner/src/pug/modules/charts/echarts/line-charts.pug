  .row.g-3.mb-3
    .col-lg-6 
      +ComponentCard({
        title:'Dynamic line chart',
        anchor:true
      }).h-100
        .echart-dynamic-line-chart-example(style="min-height: 300px;" data-echart-responsive="true")
    .col-lg-6 
      +ComponentCard({
        title:'Line log chart',
